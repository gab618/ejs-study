<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <main>
      <h1><%= title %></h1>
      <p>Bem vindo(a) ao <strong><%= title %></strong></p>
      <strong><%= name %></strong>
      <p><%= profession %></p>
      <p><%= description %></p>
      <ul>
        <% experience.map(exp => { %>
        <li>
          <div>
            <strong><%= exp.company %>:</strong>
            <strong><%= exp.office %></strong>
            <br />
            <span><%= exp.description %></span>
          </div>
        </li>
        <% }); %>
      </ul>

      <ul>
        <% education.map(edu => { %>
        <li>
          <div>
            <strong><%= edu.institution %> </strong>
            <br />
            <span><%= edu.description %> </span>
          </div>
        </li>
        <% }); %>
      </ul>

      <ul>
        <% skills.map(skill => { %>
        <li><%= skill %></li>
        <% }); %>
      </ul>
    </main>
  </body>
</html>
